// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id   Int   @id @default(autoincrement())
  email    String   @unique
  password String
  fname    String?
  lname    String?
  phone    Int?
  city     String?
  state    String?
  country  String?
  profile  Profile?
  media    Media[]
}

model Profile {
  id           Int  @id @default(autoincrement())
  display_name String?
  bio          String?
  ig_followers Int?
  tt_followers Int?
  f_gender_p   Int?
  user_id      User?   @relation(fields: [userId], references: [id])
  userId       Int? @unique
}

model Media {
  id          Int  @id @default(autoincrement())
  media       String?
  description String?
  user_id     User?   @relation(fields: [userId], references: [id])
  userId      Int?
}